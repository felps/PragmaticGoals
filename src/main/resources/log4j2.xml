<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="ERROR">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%msg (%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} )%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="error">
            <AppenderRef ref="Console"/>
        </Root>
        <appenders>
            <RollingFile name="Experiments" fileName="${sys:experimentLogFilename}">
                <PatternLayout pattern="%-4r %d{${datestamp}} [%t] %-5level %logger{36} - %msg%n"/>
            </RollingFile>
        </appenders>
    </Loggers>
</Configuration>